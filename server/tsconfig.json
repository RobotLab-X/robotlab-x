{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts",
    "src/express/framework/LaunchAction.tpl",
    "src/express/framework/LaunchAction.js",
    "src/express/framework/LaunchDescription.tpl",
    "src/express/framework/LaunchDescription.js",
    "src/express/service/Unknown.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
