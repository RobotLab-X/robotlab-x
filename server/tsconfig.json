{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./"
  },
  "include": ["**/*.ts", "express/framework/LaunchAction.tpl", "express/framework/LaunchAction.js", "express/framework/LaunchDescription.tpl", "express/framework/LaunchDescription.js"],
  "exclude": ["node_modules"]
}
