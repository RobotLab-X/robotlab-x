{
  "name": "robotlab-x-0.0.0",
  "version": "0.0.0",
  "description": "Modern robotics framework with a focus on visualization",
  "license": "MPL-2.0",
  "main": "./dist/electron/ElectronStarter.js",
  "homepage": "https://robotlab-x.com",
  "author": {
    "name": "GroG",
    "email": "grog@robotlab-x.com"
  },
  "build": {
    "appId": "com.robotlab-x-0.0.0",
    "productName": "RobotLab-X-0.0.0",
    "extends": null,
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "../assets",
      "output": "../dist/packages"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "RobotLab-X-0.0.0.AppImage"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "../assets/mac/icon.png",
      "artifactName": "RobotLab-X-0.0.0.dmg"
    },
    "win": {
      "icon": "../assets/win/icon.png",
      "artifactName": "RobotLab-X-Setup-0.0.0.${ext}"
    },
    "nsis": {
      "installerIcon": "../assets/win/logo.ico",
      "installerHeaderIcon": "../assets/win/logo.ico",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "extraMetadata": {
      "raspi": {
        "linux": {
          "artifactName": "RobotLab-X-0.0.0-armv7l.AppImage"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig-build.json && shx cp -r ./express/framework/*.js ./dist/express/framework && shx cp -r ./express/framework/*.tpl ./dist/express/framework && shx mkdir -p ./dist/launch && shx cp -r ./launch/* ./dist/launch",
    "copy-public": "shx cp -rf express/public dist/express",
    "prebuild": "node prebuild.js",
    "electron-build-mac": "yarn build && yarn copy-public && yarn generate-pkg-file && electron-builder -m",
    "electron-build-win": "yarn build && yarn copy-public && yarn generate-pkg-file && electron-builder -w",
    "electron-build-linux": "yarn build && yarn copy-public && yarn generate-pkg-file && electron-builder -l",
    "electron-build-raspi": "yarn build && yarn copy-public && yarn generate-pkg-file && electron-builder --armv7l --config.extraMetadata.raspi",
    "electron-dev": "nodemon --exec \"yarn run build && cross-env ELECTRON_START_URL=http://localhost:3000 electron --inspect ./dist/electron/ElectronStarter.js\"",
    "watch": "npm-run-all --parallel watch-build watch-static",
    "test": "jest",
    "test-coverage": "nyc yarn run test",
    "generate-schemas": "typescript-json-schema tsconfig.json 'Ollama' --out schemas.json",
    "generate-swagger": "node generate-swagger-paths.js",
    "generate-pkg-file": "node generatePkgFile.js"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.15.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "openapi-types": "^12.1.3",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "shx": "^0.3.4",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-json-schema": "^0.63.0"
  },
  "dependencies": {
    "@types/johnny-five": "^2.1.9",
    "@types/node": "^20.11.30",
    "@types/serialport": "^8.0.5",
    "@types/winston": "^2.4.4",
    "asar": "^3.2.0",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "firmata": "^2.3.0",
    "flatten": "^1.0.3",
    "fs-extra": "^11.2.0",
    "gtts": "^0.2.1",
    "johnny-five": "^2.1.0",
    "mic": "^2.1.2",
    "minimist": "^1.2.8",
    "ollama": "^0.5.1",
    "play-sound": "^1.1.6",
    "python-shell": "^5.0.0",
    "semver": "^7.6.2",
    "serialport": "^12.0.0",
    "session-file-store": "^1.5.0",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1",
    "wav": "^1.0.2",
    "wave": "^0.2.3",
    "winston": "^3.13.0",
    "ws": "^8.17.0",
    "yaml": "^2.4.1"
  }
}
