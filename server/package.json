{
  "name": "robotlab-x",
  "version": "0.9.0",
  "description": "A cross platform desktop application for creating and running robots (Server side)",
  "main": "./dist/electron/ElectronStarter.js",
  "build": {
    "appId": "org.robotlab-x.app",
    "productName": "RobotLab-X",
    "extends": null,
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "../assets",
      "output": "./dist/packages"
    },
    "linux": {
      "category": "Development",
      "icon": "../assets/linux/icon.png"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "../assets/mac/icon.png"
    },
    "win": {
      "icon": "../assets/win/icon.png"
    },
    "nsis": {
      "installerIcon": "../assets/win/logo.ico",
      "installerHeaderIcon": "../assets/win/logo.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig-build.json && cp -r ./express/public ./dist/express",
    "remove-package-folder": "rm -rf dist/packages",
    "move-packages": "cp -r dist/packages/.[0-z]* dist/packages/* ../dist && rm -rf dist/packages/*",
    "move-build": "yarn run remove-package-folder && cp -r dist/* ../build && rm -rf dist/* dist/.[0-z]* && rm -rf dist",
    "electron-build-all": "yarn run electron-build-mac && yarn run electron-build-win && yarn run electron-build-linux && yarn run move-build",
    "electron-build-mac": "electron-builder -m && yarn run move-packages",
    "electron-build-win": "electron-builder -w && yarn run move-packages",
    "electron-build-linux": "electron-builder -l && yarn run move-packages",
    "electron-dev": "yarn run build && cross-env ELECTRON_START_URL=http://localhost:3000 electron --inspect ./dist/electron/ElectronStarter.js",
    "test": "mocha",
    "test-coverage": "nyc yarn run test"
  },
  "author": "GroG",
  "license": "MPL-2.0",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.12",
    "@types/cors": "^2.8.7",
    "@types/debug": "^4.1.5",
    "@types/electron": "^1.6.10",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.2",
    "@types/node": "^12.12.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.2",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "electron-devtools-installer": "^3.1.1",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@elife/pm2": "^3.6.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "electron-is-dev": "^1.2.0",
    "express": "^4.17.1"
  }
}
